<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_wave__6_"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/text_view_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health\nCalc"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:gravity="end"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/meal"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/text_view_subtitulo"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginVertical="150dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="#888888"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faça login para continuar"
        android:layout_marginVertical="200dp"
        android:layout_marginStart="35dp"
        android:textStyle="bold"
        android:textColor="#A6A6A6"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text_background"
        android:drawablePadding="10dp"
        android:hint="E-mail"
        android:padding="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_text_background"
        android:drawablePadding="10dp"
        android:hint="Senha"
        android:padding="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textSize="18dp"
        android:layout_marginTop="390dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/login_button"
        android:padding="15dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lembrar-me"
        android:layout_gravity="end"
        android:layout_marginStart="270dp"
        android:layout_marginTop="470dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci a senha"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_gravity="end"
        android:layout_marginTop="520dp"
        android:layout_marginStart="270dp"
        android:textColorLink="#5DC6F8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não tem uma conta?"
        android:textColor="#7E7E7E"
        android:layout_marginTop="550dp"
        android:layout_marginStart="100dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar uma conta agora"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_gravity="end"
        android:layout_marginTop="550dp"
        android:layout_marginStart="235dp"
        android:textColorLink="#5DC6F8"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/ic_wave_bottom"
        android:scaleType="fitXY"
        android:layout_marginVertical="651dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por DS2M-B"
        android:layout_marginVertical="700dp"
        android:layout_marginStart="100dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"
        />

</RelativeLayout>